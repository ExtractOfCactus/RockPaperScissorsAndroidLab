<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.rockpaperscissors.GameActivity">

    <Button
        android:id="@+id/rock_button"
        android:layout_width="134dp"
        android:layout_height="68dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onRockButtonClicked"
        android:text="@string/rock"
        app:layout_constraintBottom_toBottomOf="@+id/scissors_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.122" />

    <Button
        android:id="@+id/paper_button"
        android:layout_width="131dp"
        android:layout_height="65dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="51dp"
        android:onClick="onPaperButtonClicked"
        android:text="@string/paper"
        app:layout_constraintBottom_toTopOf="@+id/scissors_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rock_button"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintHorizontal_bias="0.502" />

    <Button
        android:id="@+id/scissors_button"
        android:layout_width="134dp"
        android:layout_height="61dp"
        android:layout_marginBottom="241dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:onClick="onScissorsButtonClicked"
        android:text="@string/scissors"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/result_view"
        android:layout_width="178dp"
        android:layout_height="171dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scissors_button"
        tools:layout_editor_absoluteY="255dp"
        tools:layout_editor_absoluteX="52dp"
        app:layout_constraintVertical_bias="0.503" />
</android.support.constraint.ConstraintLayout>
